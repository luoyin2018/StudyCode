<metro:MetroWindow x:Class="MetroStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetroStudy"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <metro:MetroWindow.Resources>
        <Style x:Key="IconBase">
            <Setter Property="FrameworkElement.Height" Value="40"/>
            <Setter Property="FrameworkElement.Width"  Value="40"/>
            <Setter Property="FrameworkElement.Margin" Value="8" />
        </Style>
    </metro:MetroWindow.Resources>
    <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <iconpacks:PackIconFontAwesome Kind="FighterJet" Style="{StaticResource IconBase}"/>
        <iconpacks:PackIconOcticons Kind="Rocket" Style="{StaticResource IconBase}"/>
    </WrapPanel>
</metro:MetroWindow>
